{
  "name": "library",
  "version": "1.0.0",
  "description": "Library Management System to manage books and borrowers",
  "main": "server.js",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*"
    ]
  },
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./lib/server.js",
    "dev": "npm-run-all build server",
    "transpile": "babel ./src --out-dir lib",
    "clean": "rimraf lib",
    "watch:dev": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fizards12/Library.git"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "core-js": "^3.33.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "nodemon": "^3.0.1",
    "pg": "^8.5.1"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fizards12/Library/issues"
  },
  "homepage": "https://github.com/fizards12/Library#readme",
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3"
  }
}